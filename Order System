    <script>
        function showTab(tabId) {
            // 隱藏所有內容
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            // 顯示選擇的內容
            document.getElementById(tabId).classList.add('active');
            
            // 處理按鈕樣式
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('bg-white', 'shadow', 'text-gray-800');
                btn.classList.add('text-gray-500');
            });
            const activeBtn = tabId === 'order-tab' ? document.getElementById('btn-order') : document.getElementById('btn-ship');
            activeBtn.classList.add('bg-white', 'shadow', 'text-gray-800');
            activeBtn.classList.remove('text-gray-500');
        }
    </script>
