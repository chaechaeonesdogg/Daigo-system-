    <script>
        let items = [];
        function addItem() {
            const name = document.getElementById('itemName').value;
            const price = Number(document.getElementById('itemPrice').value);
            const cost = Number(document.getElementById('itemCost').value);
            const qty = Number(document.getElementById('itemQty').value);

            if(!name || !price) return alert("è«‹å¡«å¯«åç¨±èˆ‡åƒ¹æ ¼");

            items.push({ name, price, cost, qty });
            render();
            
            // æ¸…ç©ºè¼¸å…¥æ¬„
            document.getElementById('itemName').value = '';
            document.getElementById('itemPrice').value = '';
            document.getElementById('itemCost').value = '';
        }

        function render() {
            const list = document.getElementById('orderList');
            list.innerHTML = '';
            let total = 0;
            let profit = 0;

            items.forEach((item, index) => {
                total += item.price * item.qty;
                profit += (item.price - item.cost) * item.qty;
                list.innerHTML += `
                    <div class="pink-card p-4 flex justify-between items-center animate-fade-in">
                        <div>
                            <p class="font-bold text-gray-700">${item.name}</p>
                            <p class="text-xs text-gray-400">$${item.price} x ${item.qty}</p>
                        </div>
                        <p class="font-bold text-rose-500">$${item.price * item.qty}</p>
                    </div>
                `;
            });

            document.getElementById('totalSales').innerText = '$' + total;
            document.getElementById('totalProfit').innerText = '$' + profit;
        }

        function copyBill() {
            const name = document.getElementById('custName').value || "è¦ªæ„›çš„å®¢æˆ¶";
            let billText = `âœ¨ ${name} çš„å°å¸³å–® âœ¨\n------------------\n`;
            let total = 0;
            items.forEach(item => {
                billText += `ğŸ”¹ ${item.name} ($${item.price}) x ${item.qty}\n`;
                total += item.price * item.qty;
            });
            billText += `------------------\nğŸ’° ç¸½é‡‘é¡ï¼š$${total}\n\nâœ… ç¢ºèªç„¡èª¤è«‹å›è¦†ä¸¦å®ŒæˆåŒ¯æ¬¾ï¼Œè¬è¬æ‚¨ï¼`;
            
            navigator.clipboard.writeText(billText);
            alert("å°å¸³å–®å·²è¤‡è£½åˆ°å‰ªè²¼ç°¿ï¼å¯ä»¥å»è²¼çµ¦å®¢äººäº†ã€‚");
        }
    </script>
